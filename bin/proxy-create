#!/usr/bin/env sh
ID=$(docker run --name $1 \
       -itd \
       -u 0:0 \
       -v /tmp:/tmp \
       -v /run:/run \
       -v /home/$USER:/home/$USER \
       -e DISPLAY \
       --ipc host \
       --net host \
       --privileged \
       $2 \
       /bin/sh)

mkdir -p "$(dirname $0)/../proxy.d"
echo $ID > "$(dirname $0)/../proxy.d/$1"
docker cp /etc/passwd $ID:/etc/passwd
proxy-select $1