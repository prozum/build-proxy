#!/usr/bin/env sh
PROXY=$(cat "$(dirname $0)/../proxy.d/current")
PROFILE="$(dirname $0)/../profile.d/current"

CMD=$1
shift

docker exec -i \
            -u=$UID:$(id -g $USER) \
            -w=$PWD \
            $(cat $PROFILE/profile.env) \
            $PROXY \
            "$CMD" \
            "$@"
